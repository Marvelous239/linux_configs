# Commands
alias lsa='ls -lh'
alias c='clear'
alias vi='vim'
alias svi='sudo -E vim'
alias sourcer='source ~/.bashrc'
alias py='python3'
alias gb='cd ..'
alias findf='sudo find / -type f -name'
alias findd='sudo find / -type d -name'
alias sdn='shutdown -h now'

# Apps
alias vd='visidata'
alias vv='virt-viewer > /dev/null 2> /dev/null &'
alias vm='virt-manager > /dev/null 2> /dev/null &'
alias bitwarden='bitwarden.AppImage > /dev/null 2> /dev/null &'
alias onenote='oneNote.AppImage > /dev/null 2> /dev/null &'
alias gimp='gimp > /dev/null 2> /dev/null &'
alias firefox='firefox.app > /dev/null 2> /dev/null &'
alias ss='xfce4-screenshooter > /dev/null 2> /dev/null &'

# i3
alias wifi='nmcli c up MarvinFam --ask'
